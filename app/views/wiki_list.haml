.search-area
  .tags-input-area{'layout'=>"row",'layout-wrap'=>''}
    .selected-tags
      %li{'ng-repeat'=>'tag in selected_tags track by $index'}
        {{tag.name}}
        %span{'ng-click'=>'delete_tag($index)'}
    %md-input-container{'md-no-float'=>''}
      %input{'ng-model'=>"input.name",'ng-change'=>'edit_search_tag()',  'placeholder'=>"TagName"}
  .candidate-tags{'layout'=>"row",'layout-wrap'=>''}
    %li{'ng-repeat'=>'tag in candidate_tags track by $index', 'ng-click'=>"set_tag(tag)"}
      {{tag.name}}
%md-grid-list{'md-cols'=>'4', 'md-row-height'=>'3:4', 'md-gutter'=>'6px'}
  %a{"ui-sref"=>"wiki({wiki_id:wiki.id})", 'ng-repeat'=>'wiki in wikis'}
    %md-grid-tile.wiki_list
      %h2 {{wiki.title}}
      %md-grid-tile-header{'layout-align'=>'center'}
        %h3 {{wiki.user.name}} made {{wiki.created_at}}
      %md-grid-tile-footer
        %span{"ng-repeat"=>"tag in wiki.tags"} {{tag.name}}
